include ../showcase.jade

section#projects-section
  header.big-section-header.text-center
    div.container
      h2 Progetti recenti

  div.container
    div.row
      div.col-md-4(ng-repeat="project in projects | orderBy:'-order' | limitTo:9")
        div.panel.panel-default
          div.panel-heading.text-center
            h4.panel-title {{ project.name }}
          div.panel-body
            a(href="#/projects/{{ project.id }}")
              img(ng-src="{{ project.images.thumb }}").img-responsive
          div.panel-footer.clearfix
            div.pull-left.text-muted Stanze: {{ project.rooms.join(', ') }}
            div.pull-right
              a(href="#/projects/{{ project.id }}") Pi√π info

    div.text-center
      div.cta-wrapper
        a(href="#/projects").btn.btn-lg.btn-default Guarda tutti i miei progetti

